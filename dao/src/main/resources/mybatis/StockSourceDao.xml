<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ljq.stock.alert.dao.StockSourceDao">

	<!-- 股票源结果集resultMap -->
    <resultMap type="com.ljq.stock.alert.model.entity.StockSourceEntity" id="stockSourceMap">
        <id property="id" column="ID" />
        <result property="marketType" column="MARKET_TYPE"/>
        <result property="stockCode" column="STOCK_CODE"/>
        <result property="companyName" column="COMPANY_NAME"/>
        <result property="todayStartPrice" column="TODAY_START_PRICE"/>
        <result property="yesterdayEndPrice" column="YESTERDAY_END_PRICE"/>
        <result property="currentPrice" column="CURRENT_PRICE"/>
        <result property="increase" column="INCREASE"/>
        <result property="increasePer" column="INCREASE_PER"/>
        <result property="todayMaxPrice" column="TODAY_MAX_PRICE"/>
        <result property="todayMinPrice" column="TODAY_MIN_PRICE"/>
        <result property="tradeNumber" column="TRADE_NUMBER"/>
        <result property="tradeAmount" column="TRADE_AMOUNT"/>
        <result property="date" column="DATE"/>
        <result property="time" column="TIME"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
    </resultMap>

   <!-- 股票源-基础字段 -->
	<sql id="stock_source_base_field">
        s.`ID`,
        s.`MARKET_TYPE`,
        s.`STOCK_CODE`,
        s.`COMPANY_NAME`,
        s.`TODAY_START_PRICE`,
        s.`YESTERDAY_END_PRICE`,
        s.`CURRENT_PRICE`,
        s.`INCREASE`,
        s.`INCREASE_PER`,
        s.`TODAY_MAX_PRICE`,
        s.`TODAY_MIN_PRICE`,
        s.`TRADE_NUMBER`,
        s.`TRADE_AMOUNT`,
        s.`DATE`,
        s.`TIME`,
        s.`CREATE_TIME`,
        s.`UPDATE_TIME`
	</sql>

    <!-- 分页查询用户关注的股票 -->
    <select id="queryPageByUser" parameterType="java.util.Map" resultMap="stockSourceMap" >
        SELECT
        <include refid="stock_source_base_field" />
        FROM `stock_source` s
        LEFT JOIN `user_stock` us ON us.STOCK_ID = s.ID
        <where>
            <if test="param.userId != null" >
                AND us.USER_ID = #{param.userId}
            </if>
            <if test="param.marketType != null" >
                AND s.MARKET_TYPE = #{param.marketType}
            </if>
            <if test="param.stockCode != null and '' != param.stockCode" >
                AND s.STOCK_CODE LIKE CONCAT(CONCAT('%', #{param.stockCode}), '%')
            </if>
            <if test="param.companyName != null and '' != param.companyName" >
                AND s.COMPANY_NAME = #{param.companyName}
            </if>
        </where>
    </select>


</mapper>